{
  "name": "@point-hub/papi",
  "version": "0.1.21",
  "description": "Point API Framework",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "lib/",
    "stub/"
  ],
  "scripts": {
    "check-types": "tsc -p tsconfig.json",
    "dev": "shx rm -rf lib && bun run build.ts --watch",
    "build": "shx rm -rf lib && bun run check-types && bun run build.ts && bun run build:declaration",
    "build:declaration": "shx rm -rf tsconfig.types.tsbuildinfo && tsc -p tsconfig.types.json",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "bun run lint -- --fix"
  },
  "keywords": [
    "bun",
    "papi",
    "express",
    "api",
    "boilerplate"
  ],
  "author": "Martien Dermawan Tanama <martiendt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/point-hub/papi.git"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.3",
    "@types/shelljs": "^0.8.15",
    "@types/validatorjs": "^3.15.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "bun-types": "^1.0.22",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.2.2",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@point-hub/express-cli": "^0.2.2",
    "@point-hub/express-error-handler": "^0.1.3",
    "@point-hub/express-factory": "^1.1.4",
    "@point-hub/express-utils": "^0.2.2",
    "shelljs": "^0.8.5"
  },
  "peerDependencies": {
    "express": "^4.18.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
